<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soham.slugtutor.TEST_STUFF.FakeMain">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.soham.slugtutor.TEST_STUFF.FakeMain">

        <TextView
            android:id="@+id/display_first"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="First Name"
            android:textSize="11pt"
            android:layout_marginTop="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/display_last" />

        <TextView
            android:id="@+id/display_last"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="11pt"
            android:layout_marginTop="130dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/display_first"
            android:layout_alignStart="@+id/display_major" />

        <TextView
            android:id="@+id/display_major"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Major"
            android:textSize="11pt"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/display_last"
            android:layout_alignEnd="@+id/display_phone"
            android:layout_marginEnd="13dp" />

        <TextView
            android:id="@+id/display_phone"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Phone Number"
            android:textSize="11pt"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/display_major"
            android:layout_alignEnd="@+id/display_course"
            android:layout_marginEnd="21dp" />

        <TextView
            android:id="@+id/display_course"
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Course"
            android:textSize="11pt"
            android:layout_marginEnd="63dp"
            android:layout_below="@+id/display_phone"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp" />

        <Button
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="logout"
            android:textColor="#ffffff"
            android:background="#0044FF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="39dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp" />

    </RelativeLayout>

    <!-- drawer menu -->
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:background="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimary"
        app:itemTextAppearance="@style/AppTheme"
        app:itemIconTint="@color/colorPrimary"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
