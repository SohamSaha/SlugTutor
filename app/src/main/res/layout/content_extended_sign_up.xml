<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0fbff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.soham.slugtutor.Start_Area.ExtendedSignUp"
    tools:showIn="@layout/activity_extended_sign_up">

    <TextView
        android:id="@+id/createYourProfile"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/createProfile"
        android:gravity="center"
        android:background="#0044FF"
        android:textColor="#ffffff"
        android:textSize="11pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:textColor="#000000"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/createYourProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/FirstName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <EditText
        android:id="@+id/Major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:hint="Major"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/LastName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#000000"
        android:hint="Phone Number"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/Major"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/ContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:hint="Contact Email"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/PhoneNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Spinner
        android:id="@+id/ClassSelector1"
        android:layout_width="213dp"
        android:layout_height="41dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/spinner_background"
        app:layout_constraintTop_toBottomOf="@+id/ContactEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RadioGroup
        android:id ="@+id/statusSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ClassSelector1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.250">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student"
            />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tutor" />
    </RadioGroup>

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="writeData"
        android:textColor="#ffffff"
        android:background="#0044FF"
        app:layout_constraintTop_toBottomOf="@id/statusSelector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.750" />


</android.support.constraint.ConstraintLayout>
