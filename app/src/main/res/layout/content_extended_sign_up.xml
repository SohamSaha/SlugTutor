<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0fbff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.soham.slugtutor.Start_Area.ExtendedSignUp"
    tools:showIn="@layout/activity_extended_sign_up">

    <TextView
        android:id="@+id/textView"
        android:layout_width="477dp"
        android:layout_height="70dp"
        android:text="Create Your Profile"
        android:gravity="center"
        android:background="#0044FF"
        android:textColor="#ffffff"
        android:textSize="11pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/LastName"
        android:layout_width="309dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="438dp" />

    <EditText
        android:id="@+id/PhoneNumber"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone Number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="309dp"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/Major"
        android:layout_width="306dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Major"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="373dp"
        app:layout_constraintHorizontal_bias="0.495" />

    <EditText
        android:id="@+id/addCourse3"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Add a course (i.e. CMPS12B)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="writeData"
        android:textColor="#ffffff"
        android:background="#0044FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="62dp"
        app:layout_constraintHorizontal_bias="0.845" />

    <RadioGroup
        android:layout_width="308dp"
        android:layout_height="86dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Student" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Parent" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
